<Window x:Class="LeanguageApp.AddFlashcardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Flashcard" 
        Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#252526">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Add New Flashcard" 
                   Foreground="White" 
                   FontSize="20" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Front side -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Front Side (Word/Phrase):" 
                       Foreground="White" 
                       FontSize="14"
                       Margin="0,0,0,5"/>
            <TextBox x:Name="txtFront" 
                     Background="#2D2D30"
                     Foreground="White"
                     FontSize="14"
                     Padding="10"
                     BorderThickness="0"/>
        </StackPanel>

        <!-- Back side -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Back Side (Translation/Explanation):" 
                       Foreground="White" 
                       FontSize="14"
                       Margin="0,0,0,5"/>
            <TextBox x:Name="txtBack" 
                     Background="#2D2D30"
                     Foreground="White"
                     FontSize="14"
                     Padding="10"
                     BorderThickness="0"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Height="80"/>
        </StackPanel>

        <!-- Image upload -->
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <Button x:Name="btnAddImage" 
                    Content="Add Image" 
                    Background="#2D2D30"
                    Foreground="White"
                    Padding="10,5"
                    Click="BtnAddImage_Click"/>
            <TextBlock x:Name="txtImagePath" 
                       Foreground="LightGray" 
                       FontSize="12"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Image preview -->
        <Border Grid.Row="4" 
                Background="#1E1E1E" 
                CornerRadius="5"
                Padding="10"
                Margin="0,0,0,15"
                HorizontalAlignment="Left">
            <StackPanel>
                <TextBlock Text="Image Preview:" 
                           Foreground="White" 
                           FontSize="12"
                           Margin="0,0,0,5"/>
                <Image x:Name="imgPreview" 
                       MaxHeight="120"
                       MaxWidth="160"
                       Stretch="Uniform"
                       Visibility="Collapsed"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" 
                    Background="#2D2D30"
                    Foreground="White"
                    Padding="15,8"
                    Margin="5"
                    Click="BtnCancel_Click"/>
            <Button Content="Add Card" 
                    Background="#007ACC"
                    Foreground="White"
                    Padding="15,8"
                    Margin="5"
                    Click="BtnAdd_Click"/>
        </StackPanel>

        <!-- Dialog Overlay -->
        <Rectangle x:Name="DialogOverlay"
                   Grid.Row="0"
                   Grid.RowSpan="6"
                   Fill="Black"
                   Opacity="0.7"
                   Visibility="Collapsed"/>

        <!-- Unified Message Dialog -->
        <Border x:Name="MessageDialog"
                Grid.Row="0"
                Grid.RowSpan="6"
                Background="#252526"
                CornerRadius="10"
                Padding="25"
                Width="350"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Visibility="Collapsed"
                Opacity="0"
                BorderBrush="#007ACC"
                BorderThickness="1">
            <StackPanel>
                <TextBlock x:Name="DialogMessageText" 
                          TextWrapping="Wrap" 
                          Foreground="White"
                          FontSize="14"
                          TextAlignment="Center"
                          Margin="0,0,0,25"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="DialogOKButton" 
                            Content="OK" 
                            Background="#007ACC"
                            Foreground="White"
                            Padding="20,10"
                            Click="DialogOK_Click"/>
                    <Button x:Name="DialogYesButton" 
                            Content="Yes" 
                            Background="#007ACC"
                            Foreground="White"
                            Padding="20,10"
                            Margin="10,0,0,0"
                            Click="DialogYes_Click"
                            Visibility="Collapsed"/>
                    <Button x:Name="DialogNoButton" 
                            Content="No" 
                            Background="#2D2D30"
                            Foreground="White"
                            Padding="20,10"
                            Margin="10,0,0,0"
                            Click="DialogNo_Click"
                            Visibility="Collapsed"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>