<Page x:Class="LeanguageApp.ReadScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Reading Screen"
      Background="#252526"
      MouseDown="Page_MouseDown">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопка назад -->
        <Border Grid.Row="0" Background="#1E1E1E" Padding="15" Margin="0,0,0,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Кнопка назад -->
                <Button x:Name="btnBack" Grid.Column="0" 
                        Content="← Main Menu" 
                        Background="Transparent"
                        Foreground="#007ACC"
                        BorderThickness="0"
                        Padding="10,5"
                        FontSize="14"
                        Cursor="Hand"
                        Click="BtnBack_Click"/>

                <!-- Заголовок -->
                <TextBlock Grid.Column="1" 
                           Text="Flashcards" 
                           Foreground="White" 
                           FontSize="24" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" Width="184"/>

                <!-- Счетчик карточек -->
                <TextBlock x:Name="txtCounter" Grid.Column="2"
                           Text="0/0"
                           Foreground="LightGray"
                           FontSize="14"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <Grid x:Name="ContentGrid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="297*"/>
                <ColumnDefinition Width="103*"/>
            </Grid.ColumnDefinitions>

            <!-- Область карточки -->
            <Border x:Name="CardArea" 
                    Background="#1E1E1E" 
                    Margin="20,20,20,20" 
                    CornerRadius="15"
                    Padding="0"
                    MouseDown="CardArea_MouseDown" Grid.ColumnSpan="2">

                <!-- Карточка с анимацией переворота -->
                <Grid x:Name="CardGrid">
                    <Grid.Resources>
                        <Style x:Key="CardStyle" TargetType="Border">
                            <Setter Property="Background" Value="#2D2D30"/>
                            <Setter Property="CornerRadius" Value="10"/>
                            <Setter Property="Padding" Value="20"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="Width" Value="400"/>
                            <Setter Property="Height" Value="300"/>
                        </Style>
                    </Grid.Resources>

                    <!-- Лицевая сторона карточки -->
                    <Border x:Name="FrontCard" Style="{StaticResource CardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Изображение -->
                            <Image x:Name="CardImage" Grid.Row="0"
                                   Stretch="Uniform"
                                   MaxHeight="200"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>

                            <!-- Текст на лицевой стороне -->
                            <TextBlock x:Name="FrontText" Grid.Row="1"
                                       Text="Click to reveal"
                                       Foreground="White"
                                       FontSize="18"
                                       TextAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,0"/>
                        </Grid>
                    </Border>

                    <!-- Обратная сторона карточки -->
                    <Border x:Name="BackCard" Style="{StaticResource CardStyle}" Opacity="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="Translation"
                                       Foreground="#007ACC"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       TextAlignment="Center"
                                       Margin="0,0,0,15"/>

                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <TextBlock x:Name="BackText"
                                           Text="Translation will appear here"
                                           Foreground="White"
                                           FontSize="16"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"/>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Форма добавления карточки -->
            <Border x:Name="AddCardForm" 
                    Background="#1E1E1E" 
                    Margin="20,20,20,20" 
                    CornerRadius="15"
                    Padding="20"
                    Opacity="0"
                    Visibility="Collapsed" Grid.ColumnSpan="2">

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Add New Flashcard" 
                                   Foreground="White" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   Margin="0,0,0,20"/>

                        <!-- Front side -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Front Side (Word/Phrase):" 
                                       Foreground="White" 
                                       FontSize="14"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="txtFront" 
                                     Background="#2D2D30"
                                     Foreground="White"
                                     FontSize="14"
                                     Padding="10"
                                     BorderThickness="0"/>
                        </StackPanel>

                        <!-- Back side -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Back Side (Translation/Explanation):" 
                                       Foreground="White" 
                                       FontSize="14"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="txtBack" 
                                     Background="#2D2D30"
                                     Foreground="White"
                                     FontSize="14"
                                     Padding="10"
                                     BorderThickness="0"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Height="80"/>
                        </StackPanel>

                        <!-- Image upload -->
                        <StackPanel Margin="0,0,0,15">
                            <Button x:Name="btnSelectImage" 
                                    Content="Select Image" 
                                    Background="#2D2D30"
                                    Foreground="White"
                                    Padding="10,5"
                                    Click="BtnSelectImage_Click"/>
                            <TextBlock x:Name="txtImagePath" 
                                       Foreground="LightGray" 
                                       FontSize="12"
                                       Margin="0,5,0,10"/>

                            <!-- Image preview -->
                            <Border Background="#2D2D30" 
                                    CornerRadius="5"
                                    Padding="10"
                                    HorizontalAlignment="Left">
                                <StackPanel>
                                    <TextBlock Text="Image Preview:" 
                                               Foreground="White" 
                                               FontSize="12"
                                               Margin="0,0,0,5"/>
                                    <Image x:Name="imgPreview" 
                                           MaxHeight="120"
                                           MaxWidth="160"
                                           Stretch="Uniform"
                                           Visibility="Collapsed"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                            <Button x:Name="btnCancelAdd" 
                                    Content="Cancel" 
                                    Background="#2D2D30"
                                    Foreground="White"
                                    Padding="15,8"
                                    Margin="5"
                                    Click="BtnCancelAdd_Click"/>
                            <Button x:Name="btnSaveCard" 
                                    Content="Save Card" 
                                    Background="#007ACC"
                                    Foreground="White"
                                    Padding="15,8"
                                    Margin="5"
                                    Click="BtnSaveCard_Click"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Список всех карточек -->
            <Border x:Name="CardsListForm" 
                    Background="#1E1E1E" 
                    Margin="20,20,20,20" 
                    CornerRadius="15"
                    Padding="20"
                    Opacity="0"
                    Visibility="Collapsed" Grid.ColumnSpan="2">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="All Flashcards" 
                               Foreground="White" 
                               FontSize="24" 
                               FontWeight="Bold"
                               TextAlignment="Center"
                               Margin="0,0,0,20"/>

                    <!-- Список карточек -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="CardsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#2D2D30" 
                                            CornerRadius="8" 
                                            Margin="0,5" 
                                            Padding="15">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding FrontText}" 
                                                           Foreground="White" 
                                                           FontSize="16"
                                                           FontWeight="Bold"/>
                                                <TextBlock Text="{Binding BackText}" 
                                                           Foreground="LightGray" 
                                                           FontSize="14"
                                                           TextWrapping="Wrap"
                                                           Margin="0,5,0,0"/>
                                                <TextBlock Text="{Binding CreatedDate, StringFormat='Created: {0:dd.MM.yyyy}'}" 
                                                           Foreground="Gray" 
                                                           FontSize="12"
                                                           Margin="0,5,0,0"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <Button Content="View" 
                                                        Background="#007ACC"
                                                        Foreground="White"
                                                        Padding="10,5"
                                                        Margin="5,0,0,0"
                                                        Tag="{Binding}"
                                                        Click="BtnViewCard_Click"/>
                                                <Button Content="Delete" 
                                                        Background="#D32F2F"
                                                        Foreground="White"
                                                        Padding="10,5"
                                                        Margin="5,0,0,0"
                                                        Tag="{Binding}"
                                                        Click="BtnDeleteFromList_Click"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Кнопка назад -->
                    <Button Grid.Row="2"
                            Content="Back to Cards" 
                            Background="#2D2D30"
                            Foreground="White"
                            Padding="15,8"
                            Margin="0,20,0,0"
                            HorizontalAlignment="Center"
                            Click="BtnBackFromList_Click"/>
                </Grid>
            </Border>

            <!-- Диалог подтверждения удаления -->
            <Border x:Name="DeleteConfirmDialog"
                    Background="#2D2D30"
                    CornerRadius="10"
                    Padding="20"
                    Width="350"
                    Height="160"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Opacity="0"
                    Visibility="Collapsed"
                    BorderBrush="#007ACC"
                    BorderThickness="1"
                    Grid.ColumnSpan="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" VerticalAlignment="Center">
                        <TextBlock Text="Delete Card?"
                                   Foreground="White"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <TextBlock x:Name="DeleteConfirmText"
                                   Text=""
                                   Foreground="LightGray"
                                   FontSize="14"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Margin="10"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Content="Cancel"
                                Background="#2D2D30"
                                Foreground="White"
                                Padding="20,8"
                                Margin="5"
                                FontSize="13"
                                Click="BtnCancelDelete_Click"/>
                        <Button Content="Delete"
                                Background="#D32F2F"
                                Foreground="White"
                                Padding="20,8"
                                Margin="5"
                                FontSize="13"
                                Click="BtnConfirmDelete_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Диалог успешного удаления -->
            <Border x:Name="SuccessDialog"
                    Background="#2D2D30"
                    CornerRadius="10"
                    Padding="20"
                    Width="300"
                    Height="140"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Opacity="0"
                    Visibility="Collapsed"
                    BorderBrush="#388E3C"
                    BorderThickness="1"
                    Grid.ColumnSpan="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="✅"
                                   FontSize="20"
                                   TextAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <TextBlock x:Name="SuccessText"
                                   Text="Card deleted successfully!"
                                   Foreground="White"
                                   FontSize="14"
                                   TextAlignment="Center"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"
                                   MaxWidth="250"/>
                    </StackPanel>

                    <Button Grid.Row="1"
                            Content="OK"
                            Background="#388E3C"
                            Foreground="White"
                            Padding="20,8"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0"
                            FontSize="13"
                            Click="BtnSuccessOK_Click"/>
                </Grid>
            </Border>

            <!-- Кастомный диалог для сообщений -->
            <Border x:Name="MessageDialog"
                    Background="#2D2D30"
                    CornerRadius="10"
                    Padding="20"
                    Width="350"
                    Height="160"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Opacity="0"
                    Visibility="Collapsed"
                    BorderBrush="#007ACC"
                    BorderThickness="1"
                    Grid.ColumnSpan="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" VerticalAlignment="Center">
                        <TextBlock x:Name="MessageDialogText"
                                   Text=""
                                   Foreground="White"
                                   FontSize="14"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Margin="10"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Content="OK"
                                Background="#007ACC"
                                Foreground="White"
                                Padding="20,8"
                                Margin="5"
                                FontSize="13"
                                Click="MessageDialogOK_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Панель управления -->
        <Border Grid.Row="2" Background="#1E1E1E" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Кнопки навигации -->
                <Button x:Name="btnPrev" Content="← Previous" 
                        Background="#2D2D30" 
                        Foreground="White"
                        Padding="15,8"
                        Margin="5"
                        FontSize="14"
                        Click="BtnPrev_Click"/>

                <!-- Кнопка Flip/Close Card (меняется динамически) -->
                <Button x:Name="btnFlip" Content="🔄 Flip Card" 
                        Background="#007ACC" 
                        Foreground="White"
                        Padding="15,8"
                        Margin="5"
                        FontSize="14"
                        Click="BtnFlip_Click" RenderTransformOrigin="0.643,-0.12"/>

                <Button x:Name="btnNext" Content="Next →" 
                        Background="#2D2D30" 
                        Foreground="White"
                        Padding="15,8"
                        Margin="5"
                        FontSize="14"
                        Click="BtnNext_Click"/>

                <!-- Дополнительные кнопки -->
                <Button x:Name="btnAddCard" Content="➕ Add Card" 
                        Background="#388E3C" 
                        Foreground="White"
                        Padding="15,8"
                        Margin="5"
                        FontSize="14"
                        Click="BtnAddCard_Click"/>

                <Button x:Name="btnViewAll" Content="📋 View All" 
                        Background="#FF9800" 
                        Foreground="White"
                        Padding="15,8"
                        Margin="5"
                        FontSize="14"
                        Click="BtnViewAll_Click"/>

                <Button x:Name="btnDelete" Content="🗑️ Delete" 
                        Background="#D32F2F" 
                        Foreground="White"
                        Padding="15,8"
                        Margin="5"
                        FontSize="14"
                        Click="BtnDelete_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>